# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET     /                           controllers.Application.login
POST    /login_attemp               controllers.Application.authenticate
GET     /dashboard                  controllers.Application.dashboard
GET     /patients/:id/treatment_plan             controllers.Patient.getTreatmentPlan(id: String)
GET     /patients                   controllers.Patient.getList
GET     /patients/add               controllers.Patient.getAddForm
GET     /sample                     controllers.Application.samplePdf(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
