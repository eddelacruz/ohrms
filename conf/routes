# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET     /                           controllers.Application.login
POST    /login_attemp               controllers.Application.authenticate
GET     /dashboard                  controllers.Application.dashboard
GET     /patients/:id/treatment_plan             controllers.Patient.getTreatmentPlan(id: String)
GET     /patients                   controllers.Patient.getList
POST    /patients                   controllers.Patient.submitAddForm
POST    /patients/update            controllers.Patient.submitUpdateForm
GET     /patients/:id/treatment_plan/update               controllers.Patient.getUpdateForm(id: String)
GET     /patients/add               controllers.Patient.getAddForm
GET     /settings/audit_log         controllers.Settings.auditLog
GET     /sample                     controllers.Application.samplePdf(id: String)

GET     /json/patients              controllers.Json.getPatientList
POST    /json/patients              controllers.Json.submitPatientAddForm
POST    /json/patients/update       controllers.Json.submitPatientUpdateForm
GET     /json/patients/:id/treatment_plan      controllers.Json.getPatientTreatmentPlan(id: String)
GET     /json/settings/audit_log    controllers.Json.auditLog


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
